# emacs keybinds in zsh
bindkey -e

# need to explicity enable editor functionality in zsh
autoload -z edit-command-line
zle -N edit-command-line
bindkey "^g" edit-command-line

alias vim=nvim
alias ls='eza -lh --group-directories-first --icons=auto'
alias claude="/Users/yiyuanh/.claude/local/claude"

export EDITOR=nvim
export VISUAL=nvim

export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS \
    --highlight-line \
    --info=inline-right \
    --ansi \
    --layout=reverse \
    --border=none \
    --color=bg+:#383539,bg:#2d2a2e,spinner:#ab9df2,hl:#a9dc76 \
    --color=fg:#fcfcfa,header:#78dce8,info:#78dce8,pointer:#ff6188 \
    --color=marker:#a9dc76,fg+:#fcfcfa,prompt:#ff6188,hl+:#a9dc76 \
    --color=selected-bg:#5b595c \
    --color=border:#383539,label:#fcfcfa"

# Update tmux environment if inside tmux session
if [ -n "$TMUX" ]; then
    tmux set-environment -g FZF_DEFAULT_OPTS "$FZF_DEFAULT_OPTS"
fi

# Set up fzf key bindings and fuzzy completion
source <(fzf --zsh)

eval "$(starship init zsh)"
eval "$(/Users/yiyuanh/.local/bin/mise activate zsh)"
eval "$(zoxide init zsh)"
